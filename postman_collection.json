                {
                    "name": "Login",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "const response = pm.response.json();",
                                    "if(response.token) {",
                                    "    pm.environment.set(\"jwt_token\", response.token);",
                                    "    pm.environment.set(\"business_id\", response.business.id);",
                                    "    pm.environment.set(\"business_slug\", response.business.slug);",
                                    "}"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"email\": \"admin@example.com\",\n    \"password\": \"Password123!\"\n}",
                            "options": {
