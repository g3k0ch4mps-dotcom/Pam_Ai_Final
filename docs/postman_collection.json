{
    "info": {
        "_postman_id": "pam-ai-api-collection",
        "name": "Business AI Assistant API",
        "description": "Collection for testing the Business AI Assistant API.",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Auth",
            "item": [
                {
                    "name": "Register",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"email\": \"test@example.com\",\n    \"password\": \"password123\",\n    \"businessName\": \"Test Biz\",\n    \"firstName\": \"John\",\n    \"lastName\": \"Doe\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/api/auth/register",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "auth",
                                "register"
                            ]
                        }
                    }
                },
                {
                    "name": "Login",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "var jsonData = pm.response.json();",
                                    "if (jsonData.success) {",
                                    "    pm.collectionVariables.set(\"token\", jsonData.token);",
                                    "    pm.collectionVariables.set(\"business_slug\", jsonData.business.slug);",
                                    "}"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"email\": \"test@example.com\",\n    \"password\": \"password123\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/api/auth/login",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "auth",
                                "login"
                            ]
                        }
                    }
                }
            ]
        },
        {
            "name": "Business",
            "item": [
                {
                    "name": "Get Public Info",
                    "request": {
                        "method": "GET",
                        "url": {
                            "raw": "{{base_url}}/api/business/public/{{business_slug}}",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "business",
                                "public",
                                "{{business_slug}}"
                            ]
                        }
                    }
                }
            ]
        },
        {
            "name": "Documents",
            "item": [
                {
                    "name": "Upload Document",
                    "request": {
                        "auth": {
                            "type": "bearer",
                            "bearer": [
                                {
                                    "key": "token",
                                    "value": "{{token}}"
                                }
                            ]
                        },
                        "method": "POST",
                        "body": {
                            "mode": "formdata",
                            "formdata": [
                                {
                                    "key": "document",
                                    "type": "file",
                                    "src": []
                                }
                            ]
                        },
                        "url": {
                            "raw": "{{base_url}}/api/documents/upload",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "documents",
                                "upload"
                            ]
                        }
                    }
                },
                {
                    "name": "Add URL",
                    "request": {
                        "auth": {
                            "type": "bearer",
                            "bearer": [
                                {
                                    "key": "token",
                                    "value": "{{token}}"
                                }
                            ]
                        },
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"url\": \"https://example.com\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/api/documents/add-url",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "documents",
                                "add-url"
                            ]
                        }
                    }
                }
            ]
        },
        {
            "name": "Chat",
            "item": [
                {
                    "name": "Public Chat Message",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"message\": \"Hello, what do you do?\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/api/chat/public/{{business_slug}}",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "chat",
                                "public",
                                "{{business_slug}}"
                            ]
                        }
                    }
                }
            ]
        },
        {
            "name": "System",
            "item": [
                {
                    "name": "Health Check",
                    "request": {
                        "method": "GET",
                        "url": {
                            "raw": "{{base_url}}/api/health",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "health"
                            ]
                        }
                    }
                }
            ]
        }
    ],
    "variable": [
        {
            "key": "base_url",
            "value": "http://localhost:3000",
            "type": "string"
        },
        {
            "key": "token",
            "value": "",
            "type": "string"
        },
        {
            "key": "business_slug",
            "value": "",
            "type": "string"
        }
    ]
}