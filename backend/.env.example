# Backend Environment Variables for Render

# Server Configuration
NODE_ENV=production
PORT=3000
API_URL=https://your-backend.onrender.com

# MongoDB Configuration (MongoDB Atlas)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/dbname?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=change-this-to-a-secure-random-string-min-32-characters
JWT_EXPIRE=7d

# OpenAI API Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here

# Google Gemini API Configuration (Fallback)
GEMINI_API_KEY=your-gemini-api-key-here

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
ALLOWED_ORIGINS=https://your-frontend.onrender.com,http://localhost:3000

# Frontend URL (Support for explicit CORS and redirect logic)
FRONTEND_URL=https://your-frontend.onrender.com

# ChromaDB Configuration (Not used in MongoDB-only search)
CHROMA_PATH=./chroma_data

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/app.log
